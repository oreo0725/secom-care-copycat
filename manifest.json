{
  "manifest_version": 3,
  "name": "Care Form Assistant",
  "version": "1.0",
  "description": "協助在 care.secom.com.tw 網站上複製和貼上表單內容",
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "host_permissions": [
    "https://care.secom.com.tw/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.care.secom.com.tw/*",
        "*://care.secom.com.tw/*"
      ],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.svg"
  }
} 